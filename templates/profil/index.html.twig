{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<h1>{{ user.email }}</h1>
	</div>

	<div class="border-1 border-gray-400 bg-red-500 w-50 h-50">

		<div id="containerTweet">
			{% for tweet in tweets %}
				{{ tweet.content }}
				{{ tweet.dateTweet ? tweet.dateTweet|date('d/m/y') : '' }}
			{% endfor %}
		</div>
		<div id="containerLike">
			<p>Section Like</p>
		</div>

		<div id="containerCommente">
			<p>Section Commente</p>
		</div>

		<div id="containerRetweet">
			<p>Section Retweet</p>
		</div>

	</div>
{% endblock %}
