{{ form_start(form) }}
<div>
<div class="flex gap-3 items-start w-full">
    {% if app.user and app.user.avatar %}
        <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="Avatar" class="w-11 h-11 rounded-full object-cover">
    {% else %}
        <img src="https://as2.ftcdn.net/v2/jpg/03/59/58/91/1000_F_359589186_JDLl8dIWoBNf1iqEkHxhUeeOulx0wOC5.jpg"
             alt="Avatar"
             class="w-11 h-11 rounded-full object-cover">
    {% endif %}

    <div class="flex-1">
        {{ form_widget(form.content, {
            'attr': {
                'class': 'w-full p-3 text-lg border-b border-gray-400 text-white focus:outline-none focus:ring-2 focus:ring-main-color resize-none min-h-[80px]',
                'placeholder': 'Quoi de neuf ?'
            }
        }) }}
        {{ form_errors(form.content) }}
    </div>
</div>
</div>
<div class="flex justify-between items-center mt-2">
	<a href="">
		<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#60A5FA" class="bi bi-image" viewbox="0 0 16 16">
			<path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0"/>
			<path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1z"/>
		</svg>
	</a>
	<button type="submit" class="border border-blue-500 text-blue-400 px-5 py-2 rounded-full font-semibold cursor-pointer hover:bg-blue-500 hover:text-white transition">
		Tweeter
	</button>
</div>
{{ form_end(form) }}
